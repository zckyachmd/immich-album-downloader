# ============================================
# Immich Album Downloader - Configuration
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env
#
# All configuration values can be overridden via CLI arguments
# Priority: CLI argument > .env file > default value
# ============================================

# ============================================
# REQUIRED Configuration
# ============================================

# Your Immich server API URL
# Examples:
#   - https://gallery.yourdomain.com
#   - https://gallery.yourdomain.com/api
#   - http://localhost:2283 (development only)
IMMICH_BASE_URL=https://gallery.yourdomain.com/api

# Your Immich API key
# Get this from: Immich Settings > API Keys
# Required: Yes
IMMICH_API_KEY=your_api_key_here

# ============================================
# Optional: Output Configuration
# ============================================

# Default output directory for downloaded files
# Can be overridden with: --output or -o
# Default: ./media-downloads
DEFAULT_OUTPUT=./media-downloads

# ============================================
# Optional: Download Configuration
# ============================================

# Number of concurrent downloads
# Range: 1-50
# Can be overridden with: --concurrency or -c
# Default: 5
IMMICH_CONCURRENCY=5

# Maximum number of retries for failed downloads
# Range: 0-10
# Can be overridden with: --max-retries or -r
# Default: 3
IMMICH_MAX_RETRIES=3

# Download timeout in milliseconds
# Range: 5000-600000 (5 seconds to 10 minutes)
# Increase for large files or slow connections
# Default: 30000 (30 seconds)
IMMICH_DOWNLOAD_TIMEOUT=30000

# Download timeout in milliseconds
# Range: 5000-600000 (5 seconds to 10 minutes)
# Increase for large files or slow connections
# Default: 30000 (30 seconds)
IMMICH_DOWNLOAD_TIMEOUT=30000

# ============================================
# Optional: Rate Limiting Configuration
# ============================================

# Maximum number of API requests per time window
# Default: 10
# Note: Prevents overwhelming the Immich server
IMMICH_RATE_LIMIT_REQUESTS=10

# Time window for rate limiting in milliseconds
# Default: 1000 (1 second)
# Note: Controls how many requests per window
IMMICH_RATE_LIMIT_WINDOW_MS=1000

# ============================================
# Optional: SSL/TLS Configuration
# ============================================

# SSL certificate verification
# Set to 'false' to skip SSL verification (for self-signed certificates)
# ⚠️ WARNING: Only use 'false' for development/testing! Insecure for production!
# Default: true
IMMICH_SSL_VERIFY=true
